      "TokenValue": "RVFfQ1NDX0NQQVRFU1Q6c1RyQUxpVE9nckFURW1QQW5FeUU=",
      "Timeout": "00:00:05",
      "Retry": 8,
      "RetryInterval": "00:00:00.100",
      "PoolSize": 30
    },
    "Database": {
      "ConnectionString": "Server=localhost;Database=QMate;Trusted_Connection=True;",
      "Timeout": 2,
      "Retry": 4,
      "RetryInterval": "00:00:00.500",
      "BatchSize": 30
    },
    "Resources": {
